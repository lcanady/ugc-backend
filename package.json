{
  "name": "ugc-ad-creator-api",
  "version": "1.0.0",
  "description": "Node.js RESTful API server for generating UGC advertisements from creative briefs and images",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "generate-samples": "node examples/generate-sample-images.js",
    "docs:serve": "npx swagger-ui-serve openapi.yaml",
    "deploy:prod": "pm2 start ecosystem.config.js --env production",
    "deploy:dev": "pm2 start ecosystem.config.js --env development",
    "test:api": "bash scripts/test-api.sh",
    "test:api:prod": "API_BASE_URL=https://your-production-url.com bash scripts/test-api.sh",
    "docker:dev": "bash scripts/docker/dev-up.sh",
    "docker:down": "bash scripts/docker/dev-down.sh",
    "docker:reset": "bash scripts/docker/dev-reset.sh",
    "docker:logs": "bash scripts/docker/logs.sh",
    "docker:shell": "bash scripts/docker/shell.sh",
    "docker:test": "bash scripts/docker/test.sh",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "db:status": "npx sequelize-cli db:migrate:status"
  },
  "keywords": [
    "ugc",
    "api",
    "video",
    "ai",
    "advertising"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.17.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.2",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
